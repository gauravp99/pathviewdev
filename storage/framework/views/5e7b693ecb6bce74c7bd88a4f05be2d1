<?php
$f = './all/' . $user->email;
$io = popen ( '/usr/bin/du -sh ' . $f, 'r' );
$size = fgets ( $io, 4096);
$size = substr ( $size, 0, strpos ( $size, "\t" ) );

pclose ( $io );
$size = 100-intval($size);
if($size < 10)
    {
?>
